<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

<style name="MunionActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/munion_actionbar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/munion_bottom_bar_bg</item>
    </style>
    
<style name="MunionActionBarTransparent" parent="MunionActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MunionActionBarItem">
        <item name="android:layout_width">@dimen/munion_actionbar_item_width</item>
        <item name="android:layout_height">@dimen/munion_actionbar_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">1px</item>
    </style>
    
    <style name="MunionActionProgressBarItem">
        <item name="android:layout_width">@dimen/munion_actionbar_item_width</item>
        <item name="android:layout_height">@dimen/munion_actionbar_height</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_marginLeft">3px</item>
    </style>

    <style name="MunionActionBarButtonItem">
        <item name="android:layout_width">@dimen/munion_actionbar_button_item_width</item>
        <item name="android:layout_height">@dimen/munion_actionbar_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">1px</item>
    </style>

    <style name="MunionActionBarHomeItem" parent="MunionActionBarItem">
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>

    <style name="MunionActionBarHomeLogo">
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>

    <style name="MunionActionBarProgressBar" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minWidth">@dimen/munion_actionbar_progress_width</item>  
        <item name="android:maxWidth">@dimen/munion_actionbar_progress_width</item>  
        <item name="android:minHeight">@dimen/munion_actionbar_progress_width</item>  
        <item name="android:maxHeight">@dimen/munion_actionbar_progress_width</item>
    </style>

</resources>