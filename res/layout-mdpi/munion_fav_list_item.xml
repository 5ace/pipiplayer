<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/munion_label_list_item_padding_left">

    <CheckBox
        android:id="@+id/label_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:button="@drawable/munion_multidelete_checkbox_selector"
        android:gravity="center"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/label_detail_item_image"
        android:layout_width="@dimen/munion_label_list_image_width"
        android:layout_height="@dimen/munion_label_list_image_height"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/munion_label_list_height"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_detail_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/munion_label_list_item_title_padding_right"
            android:layout_marginTop="@dimen/munion_label_list_item_title_padding_top"
            android:gravity="top|left"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/munion_label_list_item_text_size_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_detail_item_price_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="@string/munion_label_detail_price_title"
                android:textColor="@color/munion_price_color_header"
                android:textSize="@dimen/munion_label_list_item_text_size_price" />

            <TextView
                android:id="@+id/label_detail_item_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="@color/munion_price_color"
                android:textSize="@dimen/munion_label_list_item_text_size_price" />

            <TextView
                android:id="@+id/label_detail_item_past_due"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="@dimen/munion_label_list_item_text_size_price"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>