<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/munion_actionbar_bg" >

    <RelativeLayout
        android:id="@+id/umeng_xp_ew_layout_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/umeng_xp_ew_title_search"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/umeng_xp_hl_ew_title_search" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/munion_title_logo" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/umeng_xp_ew_title_back"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@null"
        android:src="@drawable/munion_actionbar_back_selector" />

    <RelativeLayout
        android:id="@+id/umeng_xp_ew_layout_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/umeng_xp_ew_title_back"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/umeng_xp_ew_voice_search"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/umeng_xp_hl_ew_voice_input_bg"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/umeng_xp_hl_ew_voice_search" />

        <EditText
            android:id="@+id/umeng_xp_ew_search_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/umeng_xp_ew_voice_search"
            android:background="@drawable/umeng_xp_hl_ew_search_line_bg"
            android:hint=" 请输入搜索关键字"
            android:textCursorDrawable="@null"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:textColor="#000000"
            android:textColorHint="#898989" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/munion_bottom_bar_background" />

</RelativeLayout>